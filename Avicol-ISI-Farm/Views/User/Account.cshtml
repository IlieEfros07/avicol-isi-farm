@model Avicol_ISI_Farm.Models.User

@{
    ViewData["Title"] = "Account Page";
}


<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
    @if (Model != null)
    {
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-sm border-0 rounded-4">
                    <div class="card-body text-center">
                        <hr>
                        <div class="mb-4">
                            <h4 class="fw-bold">Email:</h4>
                            <p class="text-muted fs-5">@Model.Email</p>
                        </div>
                        <div class="mb-4">
                            <h4 class="fw-bold">Nume:</h4>
                            <p class="text-muted fs-5">@Model.Name</p>
                        </div>
                        <a href="Edit" class="btn btn-primary rounded-pill px-4 fs-5 mb-3">Editare Profil</a>

                        <form method="POST" asp-action="Logout" asp-controller="Auth">
                            <button type="submit" class="btn btn-danger rounded-pill px-4 fs-5 w-100">Delogare</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center fs-5" role="alert">
            User data is not available.
        </div>
    }
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
