@model Avicol_ISI_Farm.Models.User

@{
    ViewData["Title"] = "Editare Profil";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-body">
                    <h2 class="text-center mb-4">Editare Profil</h2>

                    <form method="POST" asp-action="UpdateUserDetails" asp-controller="User">
                        <div class="mb-3">
                            <label for="name" class="form-label fs-5">Nume</label>
                            <input type="text" class="form-control fs-5" id="name" name="Name" value="@Model.Name" required>
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label fs-5">Email</label>
                            <input type="email" class="form-control fs-5" id="email" name="Email" value="@Model.Email" required>
                        </div>
                        <div class="mb-3">
                            <label for="phone" class="form-label fs-5">Număr de telefon:</label>
                            <input type="text" class="form-control fs-5" id="phone" name="Phone" value="@Model.Phone" required>
                        </div>
                        <div class="mb-3">
                            <label for="address" class="form-label fs-5">Adresă</label>
                            <input type="text" class="form-control fs-5" id="address" name="Address" value="@Model.Address" required>
                        </div>
                        <button type="submit" class="btn btn-primary w-100 rounded-pill fs-5">Salvează schimbările</button>
                    </form>

                    <hr>

                    <form method="POST" asp-action="UpdateUserPassword" asp-controller="User">
                        <h4 class="text-center mb-3">Schimbă Parola</h4>
                        <div class="mb-3">
                            <label for="oldPassword" class="form-label fs-5">Parola Veche</label>
                            <input type="password" class="form-control fs-5" id="oldPassword" name="OldPassword" required>
                        </div>
                        <div class="mb-3">
                            <label for="newPassword" class="form-label fs-5">Parola Nouă</label>
                            <input type="password" class="form-control fs-5" id="newPassword" name="NewPassword" required>
                        </div>
                        <div class="mb-3">
                            <label for="confirmPassword" class="form-label fs-5">Confirmă Parola Nouă</label>
                            <input type="password" class="form-control fs-5" id="confirmPassword" name="ConfirmPassword" required>
                        </div>
                        <button type="submit" class="btn btn-success w-100 rounded-pill fs-5">Schimbă Parola</button>
                    </form>

                </div>
            </div>
        </div>
    </div>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger mt-2">
            @TempData["ErrorMessage"]
        </div>
    }

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success mt-2">
            @TempData["SuccessMessage"]
        </div>
    }
</div>

<div class="modal fade" id="successModal" tabindex="-1" aria-labelledby="successModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="successModalLabel">Succes</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Detaliile contului au fost actualizate cu succes.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Închide</button>
            </div>
        </div>
    </div>
</div>

</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<script>
    @if (TempData["SuccessMessage"] != null)
    {
        <text>
                var successModal = new bootstrap.Modal(document.getElementById('successModal'));
                successModal.show();
        </text>
    }
</script>