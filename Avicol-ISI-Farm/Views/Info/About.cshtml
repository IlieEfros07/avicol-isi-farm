@{
    ViewData["Title"] = "Despre Noi - Avicol ISI Farm";
}

<!-- Secțiune Hero -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h1 class="display-4 fw-bold text-primary">Despre Avicol ISI Farm</h1>
                <p class="lead">Agricultură Avicolă Sustenabilă în Inima Moldovei</p>
            </div>
            <div class="col-md-6">
                <img src="/images/ferma-noastra.jpg" alt="Ferma noastră în Moldova" class="img-fluid rounded shadow">
            </div>
        </div>
    </div>
</section>

<!-- Istoric -->
<section class="py-5">
    <div class="container">
        <div class="row mb-5">
            <div class="col-12 text-center">
                <h2 class="text-primary mb-4">Istoricul Nostru</h2>
                <p class="lead">Înființată în 2010 pe pământurile fertile ale Moldovei, Avicol ISI Farm a evoluat de la o fermă familială mică la unul dintre producătorii de pasări de curte cei mai de încredere din regiune.</p>
            </div>
        </div>

        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow">
                    <div class="card-body">
                        <i class="fas fa-tractor fa-3x text-primary mb-3"></i>
                        <h3>Valori Tradiționale</h3>
                        <p>Menținem tradițiile agricole moldovenești combinându-le cu tehnici moderne de creștere a păsărilor.</p>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card h-100 border-0 shadow">
                    <div class="card-body">
                        <i class="fas fa-leaf fa-3x text-primary mb-3"></i>
                        <h3>Practici Sustenabile</h3>
                        <p>Metode de agricultură eco-certificate care prioritizează bunăstarea animalelor și sustenabilitatea.</p>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card h-100 border-0 shadow">
                    <div class="card-body">
                        <i class="fas fa-award fa-3x text-primary mb-3"></i>
                        <h3>Asigurarea Calității</h3>
                        <p>Procesare în conformitate cu standardele UE și controale riguroase de calitate.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Procesul de Creștere -->
<section class="py-5 bg-primary text-white">
    <div class="container">
        <h2 class="text-center mb-5">Procesul Nostru de Creștere</h2>
        <div class="row g-4">
            <div class="col-md-3 text-center">
                <div class="step-number">1</div>
                <h4>Creștere Naturală</h4>
                <p>Păsări crescute în aer liber</p>
            </div>
            <div class="col-md-3 text-center">
                <div class="step-number">2</div>
                <h4>Hrană Organică</h4>
                <p>Nutreț non-OGM de la producători locali</p>
            </div>
            <div class="col-md-3 text-center">
                <div class="step-number">3</div>
                <h4>
                    Tratament Etic</h3>
                    <p>Mediu fără stres cu supraveghere veterinară</p>
            </div>
            <div class="col-md-3 text-center">
                <div class="step-number">4</div>
                <h4>Control Calitate</h4>
                <p>Inspecții riguroase conform standardelor UE</p>
            </div>
        </div>
    </div>
</section>

<!-- Echipa -->
<section class="py-5">
    <div class="container">
        <h2 class="text-center text-primary mb-5">Echipa Noastră</h2>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card border-0 shadow">
                    <img src="/images/echipa-manager.jpg" class="card-img-top" alt="Manager Fermă">
                    <div class="card-body text-center">
                        <h5 class="card-title">Ion Popescu</h5>
                        <p class="text-muted">Manager Fermă</p>
                        <p class="card-text">Peste 20 de ani experiență în avicultură</p>
                    </div>
                </div>
            </div>
            <!-- Adăugați mai mulți membri ai echipei -->
        </div>
    </div>
</section>

<!-- Certificări -->
<section class="py-5 bg-light">
    <div class="container">
        <h2 class="text-center mb-5">Certificări și Parteneriate</h2>
        <div class="row g-4 justify-content-center">
            <div class="col-auto">
                <img src="/images/certificat-organic-ue.png" alt="Certificat Organic UE" class="img-fluid certification-logo">
            </div>
            <div class="col-auto">
                <img src="/images/certificat-agricol-md.png" alt="Certificat Agricol Moldova" class="img-fluid certification-logo">
            </div>
        </div>
    </div>
</section>

<!-- Stilurile rămân aceleași -->

<style>
    .step-number {
        width: 50px;
        height: 50px;
        background: white;
        color: var(--bs-primary);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1rem;
        font-weight: bold;
        font-size: 1.5rem;
    }

    .certification-logo {
        max-width: 150px;
        height: auto;
    }
</style>