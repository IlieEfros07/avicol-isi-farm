@model IEnumerable<Avicol_ISI_Farm.Models.Product>

@{
    ViewData["Title"] = "All Products";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>All Products</h1>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-striped">
                    <thead class="table-primary">
                        <tr>
                            <th>Image</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Price</th>
                            <th>Stock</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var product in Model)
                        {
                            <tr>
                                <td>
                                    <img src="@product.ImageURL" alt="@product.Name" class="img-thumbnail" style="width: 60px; height: 60px; object-fit: cover;">
                                </td>
                                <td>@product.Name</td>
                                <td>@product.Description</td>
                                <td>MDL @product.Price.ToString("0.00")</td>
                                <td>
                                    @if (product.Quantity > 0)
                                    {
                                        <span class="badge bg-success">In Stock (@product.Quantity)</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Out of Stock</span>
                                    }
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
