<!DOCTYPE html>
<html lang="ro">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Avicol ISI Farm</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Avicol_ISI_Farm.styles.css" asp-append-version="true" />
    <link href="https://fonts.cdnfonts.com/css/neuropol-2" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm fixed-top">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-feather-alt me-2"></i>Avicol ISI Farm
                </a>
                <!-- Meniu tradus -->
                <div class="navbar-collapse collapse d-lg-inline-flex justify-content-between">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home me-1"></i> Acasă
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Info" asp-action="About">
                                <i class="fas fa-info-circle me-1"></i> Despre
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Product" asp-action="All">
                                <i class="fas fa-egg me-1"></i> Produse
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Order" asp-action="Add">
                                Adaugă Comandă
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Order" asp-action="All">
                                Toate Comenzile
                            </a>
                        </li>
                    </ul>


                    <!-- Secțiune cont tradusă -->
                    @if (Context.Session.GetString("_authenticated") == "true")
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-user-circle me-1"></i> Cont
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" asp-area="" asp-controller="User" asp-action="Account">Profilul Meu</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="User" asp-action="Edit">Setări</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <form asp-controller="Auth" asp-action="Logout" method="post">
                                    <button type="submit" class="dropdown-item">Deconectare</button>
                                </form>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Auth" asp-action="Login">
                                    <i class="fas fa-sign-in-alt me-1"></i> Autentificare
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Auth" asp-action="Register">
                                    <i class="fas fa-user-plus me-1"></i> Înregistrare
                                </a>
                            </li>
                        </ul>
                    }
                </div>
            </div>
        </nav>
    </header>


    <div style="padding-top: 70px;" class="flex-grow-1">
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="mt-auto py-4 bg-dark text-white">
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-4 mb-md-0">
                    <h5 class="text-uppercase mb-3">Avicol ISI Farm</h5>
                    <p class="mb-3">Furnizăm produse avicole de calitate și soluții de agricultură sustenabilă din 2010.</p>
                    <div class="social-icons">
                        <a href="#" class="text-white me-3"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="text-white me-3"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="text-white"><i class="fab fa-linkedin-in"></i></a>
                    </div>
                </div>

                <div class="col-md-4 mb-4 mb-md-0">
                    <h5 class="text-uppercase mb-3">Linkuri Rapide</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <a class="text-white-50 text-decoration-none" asp-controller="Home" asp-action="About">
                                <i class="fas fa-angle-right me-2"></i>Despre Noi
                            </a>
                        </li>
                        <li class="mb-2">
                            <a class="text-white-50 text-decoration-none" asp-controller="Product" asp-action="All">
                                <i class="fas fa-angle-right me-2"></i>Produsele Noastre
                            </a>
                        </li>
                        <li class="mb-2">
                            <a class="text-white-50 text-decoration-none" asp-controller="Home" asp-action="Services">
                                <i class="fas fa-angle-right me-2"></i>Servicii
                            </a>
                        </li>
                        <li>
                            <a class="text-white-50 text-decoration-none" asp-controller="Home" asp-action="Privacy">
                                <i class="fas fa-angle-right me-2"></i>Politica de Confidențialitate
                            </a>
                        </li>
                    </ul>
                </div>

                <div class="col-md-4">
                    <h5 class="text-uppercase mb-3">Contact</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <i class="fas fa-map-marker-alt me-2"></i>Str. Fermei 123, Chișinău
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-phone me-2"></i>+373 123 456 78
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-envelope me-2"></i>contact@avicolisifarm.md
                        </li>
                        <li>
                            <i class="fas fa-clock me-2"></i>Luni-Vineri: 8:00 - 17:00
                        </li>
                    </ul>
                </div>
            </div>

            <hr class="my-4 bg-secondary">

            <div class="row align-items-center">
                <div class="col-md-6 text-center text-md-start">
                    <p class="small mb-0">&copy; 2025 - Avicol ISI Farm. Toate drepturile rezervate.</p>
                </div>
                <div class="col-md-6 text-center text-md-end">
                    <a asp-controller="Home" asp-action="Terms" class="text-white-50 text-decoration-none small me-3">Termeni și Condiții</a>
                    <a asp-controller="Home" asp-action="Cookies" class="text-white-50 text-decoration-none small">Politica de Cookie-uri</a>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>